#!/bin/sh


echo "=== Removing Trash ==="
trash-empty 2>/dev/null

echo "=== Removing npm cache folders ==="
rm -rf ~/.cache
npm cache clean --force
rm -rf node_modules/.cache
rm -rf ~/.npm/_npx
rm -rf ~/.npm/_logs
rm -rf ~/.npm/_cacache

echo "=== Cleaning pnpm cache ==="
rm -rf ~/.pnpm-store
rm -rf ~/.local/share/pnpm

echo "=== Cleaning yarn cache ==="
yarn cache clean --all 2>/dev/null
rm -rf ~/.yarn-cache
rm -rf ~/.yarn

echo "=== Cleaning cargo cache ==="
cargo cache -a 2>/dev/null || true  # If cargo-cache tool is installed
rm -rf ~/.cargo/registry
rm -rf ~/.cargo/git
rm -rf ~/.cargo/.crates.toml ~/.cargo/.crates2.json

echo "=== Cleaning pacman cache ==="
sudo pacman -Sc --noconfirm   # Remove uninstalled package cache
sudo pacman -Scc --noconfirm  # Remove all cached packages
sudo rm -rf /var/cache/*      # Manual cache clear (use with caution)
sudo pacman -Qtdq | sudo pacman -Rns --noconfirm -

echo "=== Cleaning journal logs (keeping last 2 weeks) ==="
sudo journalctl --vacuum-time=2weeks

echo "=== Cleaning Docker ==="
sudo docker stop $(sudo docker ps -q) 2>/dev/null
sudo docker rm $(sudo docker ps -aq) 2>/dev/null
sudo docker rmi $(sudo docker images -q) 2>/dev/null
sudo docker system prune -af --volumes

echo "=== Cleaning Trash and temp files ==="
rm -rf ~/.local/share/Trash/*
sudo rm -rf /tmp/*

echo "=== Cleanup complete ==="

